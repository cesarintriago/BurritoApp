<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="229dp"
        android:weightSum="1"
        android:layout_margin="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPromo"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/santorini2" />

            <TextView
                android:id="@+id/tvPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="Viaje a Santorini 50% de descuento"
                android:textSize="15sp"
                android:layout_below="@+id/ivPromo"
                android:layout_alignLeft="@+id/tvDispo"
                android:layout_alignStart="@+id/tvDispo" />

            <TextView
                android:id="@+id/tvDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promoción válida hasta el 12/11/17"
                android:layout_below="@+id/tvPromo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>